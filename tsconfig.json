{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": "./",
    "paths": {
      "@components/*": ["components/*"],
      "@store/*": ["store/*"],
      "@model/*": ["model/*"],
      "@worker/*": ["worker/*"],
      "@env/*": ["env/*"],
      "@public/*": ["public/*"],
      "@public-reducer/*": ["public/package/types/*"]
    },
    "downlevelIteration": true,
    "noErrorTruncation": true,
    "typeRoots": [
      "./node_modules/@types",
      "types"
    ]
  },
  "exclude": [
    "node_modules",
    "public/package",
    "out"
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ]
}
